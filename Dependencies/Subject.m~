classdef Subject
    properties
        img {mustBeNumeric}
        reference {mustBeNumeric}
        zscore {mustBeNumeric}
        aff_hemisphere {mustBeNumeric}
        ss_hem_masks {logical}
        as_hem_masks {logical}
        aff_tranf 
        deformable_transform
        outlier_detection {mustBeNumeric}
        lesion_pred {mustBeNumeric}
    end
    
    methods
        % constructor
        function self = Subject(img)
            self.img = img;
        end
        
        function map_to_subject_obj(subject_info)
            self.subject = subject_info.subject;
        end
    end
end